---
import { personalInfo, socialLinks } from '@/data/portfolio';
---

<section id="hero" class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-image-wrapper">
        <img src={personalInfo.profileImage} alt={personalInfo.name} class="hero-image" width="400" height="400" />
      </div>
      <div class="hero-text">
        <h1 class="hero-title">{personalInfo.name}</h1>
        <p class="hero-tagline">{personalInfo.tagline}</p>
        <div class="social-links">
          {
            socialLinks.map((social) => (
              <a href={social.url} aria-label={social.ariaLabel} title={social.name} class="social-link" target="_blank" rel="noopener noreferrer">
                {social.icon === 'linkedin' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 56.69 56.69">
                    <path
                      fill="currentColor"
                      d="M49.27 4.67H7.13A3.6 3.6 0 0 0 3.5 8.23v42.61a3.6 3.6 0 0 0 3.65 3.56h42.12c2.02 0 3.66-1.6 3.66-3.56V8.23a3.6 3.6 0 0 0-3.66-3.56zM18.46 46.3H11V23.85h7.47V46.3zm-3.73-25.52h-.05c-2.5 0-4.12-1.73-4.12-3.88 0-2.2 1.67-3.88 4.22-3.88 2.56 0 4.13 1.67 4.18 3.88 0 2.15-1.63 3.88-4.23 3.88zM45.4 46.3h-7.46v-12c0-3.02-1.08-5.08-3.78-5.08a4.08 4.08 0 0 0-3.83 2.73c-.2.48-.25 1.15-.25 1.82V46.3h-7.46s.1-20.35 0-22.46h7.46v3.18c1-1.53 2.77-3.7 6.73-3.7 4.91 0 8.6 3.2 8.6 10.1V46.3z"
                    />
                  </svg>
                )}
                {social.icon === 'twitter' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 1227">
                    <path fill="currentColor" d="M714 519 1161 0h-106L667 451 357 0H0l468 682L0 1226h106l409-476 328 476h357L714 519ZM569 688l-47-68L144 80h163l304 436 48 68 396 566H892L569 688Z" />
                  </svg>
                )}
                {social.icon === 'github' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
                    <path
                      fill="currentColor"
                      fill-rule="evenodd"
                      d="M16 0a16 16 0 0 0-5 31.2c.7.1 1-.4 1-.8v-2.8c-4.4 1-5.4-2-5.4-2-.7-2-1.7-2.4-1.7-2.4-1.5-1 0-1 0-1 1.7.1 2.5 1.7 2.5 1.7 1.4 2.4 3.8 1.7 4.7 1.3a3 3 0 0 1 1-2.1c-3.6-.4-7.3-1.8-7.3-8 0-1.7.6-3.1 1.6-4.2-.1-.4-.7-2 .2-4.3 0 0 1.3-.4 4.4 1.7a15.3 15.3 0 0 1 8 0c3-2.1 4.4-1.7 4.4-1.7.9 2.2.3 3.9.2 4.3 1 1 1.6 2.5 1.6 4.3 0 6.1-3.7 7.5-7.3 7.9.6.4 1.1 1.4 1.1 2.9v4.4c0 .5.3 1 1 .8A16 16 0 0 0 16 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                )}
                {social.icon === 'codepen' && (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 128 128">
                    <path
                      fill="currentColor"
                      fill-rule="evenodd"
                      d="M117 73.2 103.2 64l13.8-9.2v18.4zm-47.5 39V86.6l23.8-16 19.3 12.9-43.1 28.7zM64 77 44.5 64 64 51l19.5 13L64 77zm-5.5 35.2L15.4 83.5l19.3-12.9 23.8 16v25.6zM11 54.8 24.8 64 11 73.2V54.8zm47.5-39v25.6l-23.8 16-19.3-12.9 43.1-28.7zm11 0 43.1 28.7-19.3 12.9-23.8-16V15.8zm58.5 28v-.3l-.2-.4v-.3a6.7 6.7 0 0 0-.5-1l-.2-.3a3.9 3.9 0 0 0-.4-.5l-.3-.3-.2-.3-.3-.2-.3-.2L67 1a5.5 5.5 0 0 0-6.2 0L2.5 40h-.1a4 4 0 0 0-.6.4l-.2.3a3.8 3.8 0 0 0-.5.5 5 5 0 0 0-.6 1v.2l-.2.4-.1.3-.1.4v.3l-.1.7v39.7l.1.3v.4l.2.3.1.4.1.3.2.3.2.3A4.9 4.9 0 0 0 2 87.8l.3.2L61 127a5.4 5.4 0 0 0 6.1 0l58.6-39 .3-.2.3-.2.2-.3a4.8 4.8 0 0 0 .7-.8l.2-.3.2-.3v-.3l.2-.4.1-.3.1-.4v-.3l.1-.7V43.8z"
                      clip-rule="evenodd"
                    />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    position: relative;
    padding: var(--space-8) 0;
  }

  .hero-content {
    display: flex;
    align-items: center;
    gap: var(--space-8);
    max-width: 1000px;
    margin: 0 auto;
  }

  .hero-image-wrapper {
    flex-shrink: 0;
    max-width: 400px;
    animation: fadeInLeft 1s ease-out;
  }

  .hero-image {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-2xl);
    box-shadow: var(--shadow-xl);
  }

  .hero-text {
    flex: 1;
    animation: fadeInRight 1s ease-out 0.2s both;
  }

  .hero-title {
    font-size: var(--font-size-6xl);
    color: var(--color-text-white);
    margin-bottom: var(--space-3);
    font-weight: var(--font-weight-bold);
  }

  .hero-tagline {
    font-size: var(--font-size-xl);
    color: var(--color-text-white);
    opacity: 0.9;
    margin-bottom: var(--space-6);
    font-weight: var(--font-weight-normal);
  }

  .social-links {
    display: flex;
    gap: var(--space-5);
    margin-bottom: var(--space-6);
  }

  .social-link {
    color: var(--color-text-white);
    opacity: 0.8;
    transition:
      opacity var(--transition-fast),
      transform var(--transition-fast);
    display: inline-flex;
  }

  .social-link:hover {
    opacity: 1;
    transform: translateY(-3px);
  }

  .social-link svg {
    width: 28px;
    height: 28px;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  @media (max-width: 1024px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-6);
    }

    .hero-image-wrapper {
      max-width: 280px;
    }

    .hero-title {
      font-size: var(--font-size-4xl);
    }

    .hero-tagline {
      font-size: var(--font-size-base);
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
